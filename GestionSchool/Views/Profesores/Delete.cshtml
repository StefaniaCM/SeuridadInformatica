@model GestionSchool.Models.Profesore

@{
    ViewData["Title"] = "Profesor";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">¿Está seguro de que desea eliminar este profesor?</h4>
                </div>
                <div class="card-body bg-light">
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombres)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombres)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellidos)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CorreoElectronico)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CorreoElectronico)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Profesion)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Profesion)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ImagenUrl)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ImagenUrl)
                        </dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="DocumentoIdentidad" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>